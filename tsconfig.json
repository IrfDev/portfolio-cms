{
  "extends": "@strapi/typescript-utils/tsconfigs/server",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "rootDir": ".",
    "allowJs": true,
    "strict": true
  },
  "files": ["./types/global.d.ts"],
  "include": ["./", "src/**/*.json", "./types/**.d.ts"],
  "exclude": [
    "node_modules/",
    "build/",
    "dist/",
    ".cache/",
    ".tmp/",
    "src/admin/",
    "**/*.test.ts",
    "src/plugins/**"
  ]
}
